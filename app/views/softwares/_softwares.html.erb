<div class="row">
  <div class="col-lg-4">
    <input id="filter" type="text" class="form-control" placeholder="Search For...">
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-hover tablesorter" id="sortable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Serial</th>
          <th>Notes</th>
          <th>Item</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="searchable">
        <% @softwares.each do |software| %>
          <tr>
            <td><%= software.name %></td>
            <td><%= software.serial %></td>
            <td><%= software.notes %></td>
            <td>
              <% if software.item != nil %>
                <%= link_to software.item.name, software.item %>
              <% end %>
            </td>
            <td>
              <div class="btn-group">
                <%= link_to 'Show', software, class: "btn btn-xs btn-info" %>
                <%= link_to 'Edit', edit_software_path(software), class: "btn btn-xs btn-info" %>
                <%= link_to 'Destroy', software, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
