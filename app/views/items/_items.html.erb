<div class="row">
  <div class="col-lg-4">
    <input id="filter" type="text" class="form-control" placeholder="Search For...">
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped tablesorter" id="sorttable">
      <thead>
        <tr>
          <th>Serial</th>
          <th>Name</th>
          <th>Manufacturer</th>
          <th>Ubt serial</th>
          <th>Description</th>
          <th>User</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="searchable">
        <% @items.each do |item| %>
          <tr>
            <td><%= item.serial %></td>
            <td><%= item.name %></td>
            <td><%= item.manufacturer %></td>
            <td><%= item.ubt_serial %></td>
            <td><%= item.description %></td>
            <td>
              <% if item.user != nil %>
                <%= item.user.email %>
              <% end %>
            </td>
            <td>
              <div class="btn-group">
                <%= link_to 'Show', item, class: "btn btn-xs btn-info" %>
                <%= link_to 'Edit', edit_item_path(item), class: "btn btn-xs btn-info" %>
                <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
