<div class="paragraph">
  <div class="row">
    <div class="col-sm-2 ener-header">Serial</div>
    <div class="col-sm-2 ener-header">Name</div>
    <div class="col-sm-1 ener-header">Manufacturer</div>
    <div class="col-sm-1 ener-header">Ubt serial</div>
    <div class="col-sm-3 ener-header">Description</div>
    <div class="col-sm-1 ener-header">User</div>
    <div class="col-sm-2 ener-header"></div>
  </div>

  <% @items.each do |item| %>
    <div class="row">
      <div class="col-sm-2"><%= item.serial %></div>
      <div class="col-sm-2"><%= item.name %></div>
      <div class="col-sm-1"><%= item.manufacturer %></div>
      <div class="col-sm-1"><%= item.ubt_serial %></div>
      <div class="col-sm-3"><%= item.description %></div>
      <div class="col-sm-1"><%= item.user %></div>
      <div class="col-sm-2">
        <%= link_to 'Show', item %>
        <%= link_to 'Edit', edit_item_path(item) %>
        <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
</div>
