<div class="row">
  <div class="col-lg-4">
    <input id="filter" type="text" class="form-control" placeholder="Search For...">
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <table class="table table-striped table-hover tablesorter" id="sortable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Serial</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="searchable">
        <% @softwares.each do |software| %>
          <tr>
            <td><%= software.name %></td>
            <td><%= software.serial %></td>
            <td><%= link_to 'Show', software %></td>
            <td><%= link_to 'Edit', edit_software_path(software) %></td>
            <td><%= link_to 'Destroy', software, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
