<div class="page-header">
  <h1>Assign User for Item</h1>
</div>

<div class="content">
  <div class="row">
    <div class="col-lg-4">
      <input id="filter" type="text" class="form-control" placeholder="Search For...">
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-striped table-hover tablesorter" id="sorttable">
        <thead>
          <tr>
            <th>User</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="searchable">
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td>
                <div class="btn-group">
                  <%= link_to "Assign", process_user_path(@item, user), class: "btn btn-xs btn-success" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="btn-group">

  </div>
</div>
