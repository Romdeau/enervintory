<div class="page-header">
  <h1>Showing Details for <%= @item.serial%></h1>
</div>
<div class="paragraph">
  <div class="row">
    <div class="col-sm-6">
      <%= render 'item' %>
    </div>
    <div class="col-sm-6">
      <%= render 'software' %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="btn-group">
        <% if @item.user_id == nil %>
          <%= link_to "Assign to User", assign_user_path, class: "btn btn-sm btn-success" %>
        <% else %>
          <%= link_to "View User", user_path(@item.user), class: "btn btn-sm btn-info" %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="btn-group">
        <%= link_to 'New Software', new_item_software_path(@item), class: "btn btn-sm btn-success" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="btn-group">
        <%= link_to 'Edit', edit_item_path(@item), class: "btn btn-sm btn-info" %>
        <%= link_to 'Back', items_path, class: "btn btn-sm btn-info" %>
      </div>
    </div>
  </div>
</div>
