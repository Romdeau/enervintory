<div class="page-header">
  <h1>Showing Details for <%= @item.serial%></h1>
</div>
<div class="paragraph">
  <p>
    <strong>Serial:</strong>
    <%= @item.serial %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= @item.name %>
  </p>

  <p>
    <strong>Manufacturer:</strong>
    <%= @item.manufacturer %>
  </p>

  <p>
    <strong>Ubt serial:</strong>
    <%= @item.ubt_serial %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @item.description %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @item.user %>
  </p>
  <div class="btn-group">
    <%= link_to 'New Software', new_item_software_path(@item), class: "btn btn-sm btn-info" %>
    <%= link_to 'Edit', edit_item_path(@item), class: "btn btn-sm btn-info" %>
    <%= link_to 'Back', items_path, class: "btn btn-sm btn-info" %>
  </div>
</div>
